<config>
    <modules>
        <Diglin_Ricento>
            <version>0.0.6</version>
        </Diglin_Ricento>
    </modules>

    <default>
        <ricento>
            <config>
                <assistant_url>https://assistant.ricardo.ch</assistant_url>
                <assistant_url_dev>https://ra.betaqxl.com/</assistant_url_dev>
                <signup_url>http://api.ricardo.ch/request.php</signup_url>
                <dev_mode>0</dev_mode>
                <debug>0</debug>
                <simulate_authorization>1</simulate_authorization>
            </config>
            <global>
                <shipping_calculation>highest_price</shipping_calculation>
            </global>
        </ricento>
    </default>

    <global>
        <psr0_namespaces>
            <Diglin_Ricardo />
        </psr0_namespaces>

        <models>
            <diglin_ricento>
                <class>Diglin_Ricento_Model</class>
                <resourceModel>diglin_ricento_resource</resourceModel>
            </diglin_ricento>

            <diglin_ricento_resource>
                <class>Diglin_Ricento_Model_Resource</class>
                <entities>
                    <products_listing>
                        <table>ricento_products_listing</table>
                    </products_listing>
                    <products_listing_item>
                        <table>ricento_products_listing_item</table>
                    </products_listing_item>
                    <sales_options>
                        <table>ricento_sales_options</table>
                    </sales_options>
                    <api_token>
                        <table>ricento_api_token</table>
                    </api_token>
                    <sync_log>
                        <table>ricento_sync_log</table>
                    </sync_log>
                </entities>
            </diglin_ricento_resource>
        </models>

        <blocks>
            <diglin_ricento>
                <class>Diglin_Ricento_Block</class>
            </diglin_ricento>
        </blocks>

        <helpers>
            <diglin_ricento>
                <class>Diglin_Ricento_Helper</class>
            </diglin_ricento>
        </helpers>

        <resources>
            <diglin_ricento_resource_setup>
                <setup>
                    <module>Diglin_Ricento</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </diglin_ricento_resource_setup>

            <diglin_ricento_resource_read>
                <connection>core_read</connection>
            </diglin_ricento_resource_read>

            <diglin_ricento_resource_write>
                <connection>core_write</connection>
            </diglin_ricento_resource_write>
        </resources>

        <models>
            <diglin_ricento>
                <class>Diglin_Ricento_Model</class>
            </diglin_ricento>
        </models>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <diglin_ricento>
                    <file>ricento.xml</file>
                </diglin_ricento>
            </updates>
            <jstranslate>
                <file>jstranslator.xml</file>
            </jstranslate>
        </layout>
        <translate>
            <modules>
                <diglin_ricento>
                    <files>
                        <default>Diglin_Ricento.csv</default>
                    </files>
                </diglin_ricento>
            </modules>
        </translate>
    </adminhtml>

    <admin>
        <routers>
            <ricento>
                <use>admin</use>
                <args>
                    <module>Diglin_Ricento</module>
                    <frontName>ricento</frontName>
                    <modules>
                        <diglin_ricento before="Mage_Adminhtml">Diglin_Ricento_Adminhtml</diglin_ricento>
                    </modules>
                </args>
            </ricento>
        </routers>
    </admin>
</config>