<layout>
    <default>
        <reference name="head">
            <action method="addCss"><style>ricento/css/ricento.css</style></action>
        </reference>
        <reference name="root">
            <action method="unsetChild"><name>menu</name></action>
            <block type="diglin_ricento/adminhtml_page_menu" name="menu" as="menu" />
        </reference>
    </default>

    <ricento_scripts>
        <reference name="head">
            <action method="addItem">
                <type>js_css</type>
                <name>prototype/windows/themes/default.css</name>
            </action>
            <action method="addCss">
                <name>lib/prototype/windows/themes/magento.css</name>
            </action>
            <action method="addJs">
                <name>ricento/adminhtml.js</name>
            </action>
        </reference>
    </ricento_scripts>

    <ricento_dashboard_index>
        <reference name="root">
            <block type="core/template" name="ricento_dashboard" as="ricento.dashboard"
                   template="diglin_ricento/dashboard.phtml">
                <block type="core/text_list" name="ricento_dashboard_left" as="ricento.dashboard.left"/>
                <block type="core/text_list" name="ricento_dashboard_right" as="ricento.dashboard.right"/>
            </block>
        </reference>
    </ricento_dashboard_index>

    <ricento_products_listing_index>
        <update handle="ricento_scripts"></update>
        <reference name="content">
            <block type="diglin_ricento/adminhtml_products_listing_new"
                   name="products_listing_new"></block>
        </reference>
    </ricento_products_listing_index>

    <ricento_products_listing_edit>
        <update handle="ricento_scripts"></update>
        <reference name="content">
            <block type="diglin_ricento/adminhtml_products_listing_edit" name="products_listing_edit"></block>
        </reference>
        <reference name="left">
            <block type="diglin_ricento/adminhtml_products_listing_edit_tabs" name="products_listing_edit_tabs"></block>
        </reference>
    </ricento_products_listing_edit>
    <ricento_products_listing_addproductspopup>
        <update handle="overlay_popup"></update>
        <remove name="footer"></remove>
        <reference name="content">
            <block type="diglin_ricento/adminhtml_products_listing_edit_tabs_products_add"
                   name="products_listing_add"></block>
        </reference>
    </ricento_products_listing_addproductspopup>
    <ricento_products_listing_item_configure>
        <reference name="content">
            <block type="diglin_ricento/adminhtml_products_listing_item_edit" name="products_listing_item_edit"></block>
        </reference>
    </ricento_products_listing_item_configure>
</layout>