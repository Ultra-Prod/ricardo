/**
 * @var $this Diglin_Ricento_Block_Adminhtml_Notifications_Expiration
 */

/* @var $website Mage_Core_Model_Website */
$website = Mage::app()->getWebsite();
?>
<?php if ($this->isEnabled($website) && $this->isApiConfigured($website) && $this->isApiGoExpire($website)): ?>
<div class="notification-global">
    <?php if ($this->isApiCredentialTokenExist($website)): ?>
    <strong><?php echo $this->__('Your Ricardo API token credentials are going to expire in %s days for the website "%s".', $this->getExpirationNotificationDelay(), $website->getName());?></strong>
    <?php else: ?>
    <strong><?php echo $this->__('No Ricardo API Authorization have been found for the website "%s".', $website->getName());?></strong>
    <?php endif; ?>
    <?php echo $this->__(' You have to authorize your account to get access to the Ricardo API thanks to the <a href="%s">Ricardo Authorization Page</a>. If you don\'t do it, your Ricardo extension and all related transactions with Ricardo will be blocked.',
            $this->getValidationUrl($website)); ?>
    <?php echo $this->__('To hide this message, you have to <a href="%s">disable the extension</a>.', Mage::helper('diglin_ricento')->getConfigurationUrl($website)); ?>
</div>
<?php endif ?>